@model IEnumerable<GUUI2.Models.CheckIn>

@{
    ViewData["Title"] = "Reception";
}

<div class="text-center">
    <h1 class="display-4">Reception</h1>
    <p>Her kan du booke gæster til morgenmad:</p>
    <div class="form-group">
        <a asp-controller="Reception" asp-action="Booking" class="btn btn-primary">Opret Booking</a>
    </div>
    <p>Her kan du se dem der har checket ind til morgenmad:</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>Dato</p>
                </th>
                <th>
                    <p>Værelsesnummer</p>
                </th>
                <th>
                    <p>Antal Voksne</p>
                </th>
                <th>
                    <p>Antal børn</p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VaerelsesNr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voksne)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Boern)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>